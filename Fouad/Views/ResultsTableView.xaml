<UserControl x:Class="Fouad.Views.ResultsTableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fouad.Views"
             xmlns:converters="clr-namespace:Fouad.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800"
             KeyDown="ResultsTableView_KeyDown">
    <Grid x:Name="ResultsTableGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Modern Header with Title, Search Box and Advanced Search Button -->
        <Border Grid.Row="0" 
                Background="{StaticResource ResultsHeaderBackground}" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,0,0,1" 
                MinHeight="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,10">
                    <TextBox x:Name="SearchTextBox" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Width="200" 
                             Height="35" 
                             Style="{StaticResource ModernSearchTextBoxStyle}"
                             Margin="0,0,15,0"
                             GotFocus="SearchTextBox_GotFocus"
                             KeyDown="SearchTextBox_KeyDown"/>

                    <Button x:Name="AdvancedSearchButton" 
                            Content="Advanced Search" 
                            Width="130" 
                            Height="35" 
                            Style="{StaticResource ModernPrimaryButtonStyle}"
                            Command="{Binding AdvancedSearchCommand}"
                            Margin="0,0,10,0"/>

                    <Button x:Name="SearchFilterButton" 
                            Content="Search Filter" 
                            Width="130" 
                            Height="35" 
                            Style="{StaticResource ModernSecondaryButtonStyle}"
                            Command="{Binding SearchFilterCommand}"/>
                </StackPanel>

                <TextBlock x:Name="ResultsTitleLabel" Grid.Column="1" 
                           Text="{Binding ResultsTitleWithCount}" 
                           Style="{StaticResource ModernHeaderTextBlockStyle}"
                           Margin="15,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Search Status and Progress Indicator -->
        <Border Grid.Row="1" 
                Background="{StaticResource ResultsHeaderBackground}" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,0,0,1" 
                MinHeight="30"
                Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" Margin="15,5">
                <ProgressBar Width="100" Height="20" IsIndeterminate="True" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding SearchStatus}" 
                           Style="{StaticResource ModernBodyTextBlockStyle}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Modern DataGrid for Results -->
        <DataGrid x:Name="ResultsDataGrid"
                  Grid.Row="2" 
                  ItemsSource="{Binding Results}" 
                  AutoGenerateColumns="False"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  Style="{StaticResource ModernDataGridStyle}"
                  ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                  RowStyle="{StaticResource ModernDataGridRowStyle}"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  GridLinesVisibility="Horizontal">
            <!-- Add modern column definitions -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
                <DataGridTextColumn Header="Content" Binding="{Binding Content}" Width="2*"/>
                <DataGridTextColumn Header="Match Count" Binding="{Binding MatchCount}" Width="Auto"/>
                <DataGridTextColumn Header="Search Date" Binding="{Binding SearchDate, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>