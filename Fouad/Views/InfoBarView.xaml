<UserControl x:Class="Fouad.Views.InfoBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fouad.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid Style="{StaticResource EnhancedInfoBarStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left side - File information -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,0">
            <TextBlock Text="File Name:" FontWeight="Bold" Foreground="White" Margin="0,0,5,0"/>
            <TextBlock Text="{Binding FileName}" Foreground="White" Margin="0,0,15,0"/>
            
            <TextBlock Text="Size:" FontWeight="Bold" Foreground="White" Margin="0,0,5,0"/>
            <TextBlock Text="{Binding FileSize}" Foreground="White" Margin="0,0,15,0"/>
            
            <TextBlock Text="Rows:" FontWeight="Bold" Foreground="White" Margin="0,0,5,0"/>
            <TextBlock Text="{Binding RowCount}" Foreground="White" Margin="0,0,15,0"/>
            
            <TextBlock Text="Columns:" FontWeight="Bold" Foreground="White" Margin="0,0,5,0"/>
            <TextBlock Text="{Binding ColumnCount}" Foreground="White" Margin="0,0,15,0"/>
            
            <TextBlock Text="Last Modified:" FontWeight="Bold" Foreground="White" Margin="0,0,5,0"/>
            <TextBlock Text="{Binding LastModified}" Foreground="White"/>
        </StackPanel>
        
        <!-- Right side - Action buttons -->
        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0">
            <Button Content="Archived Files" 
                    Command="{Binding OpenArchivedFilesCommand}"
                    Width="120" Height="35" Margin="0,0,10,0"
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Column Selector" 
                    Command="{Binding OpenColumnSelectorCommand}"
                    Width="120" Height="35" Margin="0,0,10,0"
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Review Data" 
                    Command="{Binding ReviewDataCommand}"
                    Width="120" Height="35" 
                    Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>