<UserControl x:Class="Fouad.Views.TopBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fouad.Views"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Grid Style="{StaticResource EnhancedTopBarStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - Audio and Interface Controls -->
        <StackPanel x:Name="LeftControlsPanel" Grid.Column="0" Orientation="Horizontal" Margin="15,0">
            <TextBlock x:Name="ManageAudioLabel" Text="Manage Audio" VerticalAlignment="Center" Style="{StaticResource EnhancedTextBlockStyle}" Margin="0,0,15,0" Width="80"/>
            <Slider x:Name="AudioSlider" Width="120" VerticalAlignment="Center" Margin="0,0,15,0"/>
            <Button x:Name="TestAudioButton" Content="Test Audio" Width="90" Height="35" Margin="0,0,15,0" 
                    Command="{Binding PlayTestSoundCommand}" Style="{StaticResource EnhancedAnimatedButtonStyle}"/>
            <!-- Replace the old dark mode toggle with our new theme switcher -->
            <local:ThemeSwitcherView x:Name="ThemeSwitcher" Width="120" Height="35" Margin="0,0,15,0" />
        </StackPanel>

        <!-- Center - Title -->
        <TextBlock Grid.Column="1" Text="{Binding Title}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="22" FontWeight="Bold" Foreground="White"
                   Style="{DynamicResource AnimatedTitleTrigger}"/>

        <!-- Right Side - Language and File Controls -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="15,0">
            <Button Content="{Binding LanguageButtonText}" 
                    Width="90" Height="35" Margin="0,0,15,0"
                    Click="LanguageButton_Click" Style="{StaticResource EnhancedAnimatedButtonStyle}"/>
            <Button Content="Insert File" 
                    Width="110" Height="35" Margin="0,0,15,0"
                    Command="{Binding InsertFileCommand}" Style="{StaticResource EnhancedAnimatedButtonStyle}"/>
            <Button Content="Delete File" 
                    Width="110" Height="35" Margin="0,0,15,0"
                    Command="{Binding DeleteFileCommand}" Style="{StaticResource EnhancedAnimatedButtonStyle}"/>
            <Button Content="Settings" 
                    Width="110" Height="35" Margin="0,0,15,0"
                    Command="{Binding SettingsCommand}" Style="{StaticResource EnhancedAnimatedButtonStyle}"/>
            <Button Content="Store" 
                    Width="110" Height="35" 
                    Command="{Binding StoreCommand}" Style="{StaticResource EnhancedAnimatedButtonStyle}"/>
            <Button Content="Review Data" 
                    Width="110" Height="35" Margin="0,0,15,0"
                    Command="{Binding ReviewDataCommand}" Style="{StaticResource EnhancedAnimatedButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>