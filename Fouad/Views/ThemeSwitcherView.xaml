<UserControl x:Class="Fouad.Views.ThemeSwitcherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fouad.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150">
    <Grid>
        <ToggleButton x:Name="ThemeToggleButton" 
                      Click="ThemeToggleButton_Click"
                      Style="{StaticResource ThemeToggleStyle}">
            <StackPanel Orientation="Horizontal">
                <Path x:Name="ThemeIcon" 
                      Data="M12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18M20,15.31L23.31,12L20,8.69V4H15.31L12,0.69L8.69,4H4V8.69L0.69,12L4,15.31V20H8.69L12,23.31L15.31,20H20V15.31Z" 
                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" 
                      Width="20" 
                      Height="20" 
                      Stretch="Uniform"/>
                <TextBlock x:Name="ThemeText" 
                           Text="{DynamicResource LightModeEnabled}" 
                           Margin="5,0,0,0" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </ToggleButton>
    </Grid>
</UserControl>