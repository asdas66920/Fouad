<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Import necessary resources -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Fouad;component/Themes/Colors.xaml"/>
        <ResourceDictionary Source="/Fouad;component/Themes/Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Button Hover Animation -->
    <Storyboard x:Key="ButtonHoverAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                         To="1.05" Duration="0:0:0.1"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                         To="1.05" Duration="0:0:0.1"/>
    </Storyboard>
    
    <!-- Button Leave Animation -->
    <Storyboard x:Key="ButtonLeaveAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                         To="1" Duration="0:0:0.1"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                         To="1" Duration="0:0:0.1"/>
    </Storyboard>
    
    <!-- Button Click Animation -->
    <Storyboard x:Key="ButtonClickAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                         To="0.95" Duration="0:0:0.05"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                         To="0.95" Duration="0:0:0.05"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                         To="1" Duration="0:0:0.05" BeginTime="0:0:0.05"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                         To="1" Duration="0:0:0.05" BeginTime="0:0:0.05"/>
    </Storyboard>
    
    <!-- Fade In Animation -->
    <Storyboard x:Key="FadeInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
    </Storyboard>
    
    <!-- Fade Out Animation -->
    <Storyboard x:Key="FadeOutAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.3"/>
    </Storyboard>
    
    <!-- Slide In From Left Animation -->
    <Storyboard x:Key="SlideInFromLeftAnimation">
        <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                            From="-200,0,0,0" To="0,0,0,0" 
                            Duration="0:0:0.3">
            <ThicknessAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </ThicknessAnimation.EasingFunction>
        </ThicknessAnimation>
    </Storyboard>
    
    <!-- Slide In From Right Animation -->
    <Storyboard x:Key="SlideInFromRightAnimation">
        <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                            From="200,0,0,0" To="0,0,0,0" 
                            Duration="0:0:0.3">
            <ThicknessAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </ThicknessAnimation.EasingFunction>
        </ThicknessAnimation>
    </Storyboard>
    
</ResourceDictionary>