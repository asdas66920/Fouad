<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:models="clr-namespace:Fouad.Models">
    
    <!-- Import necessary resources -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Fouad;component/Themes/Colors.xaml"/>
        <ResourceDictionary Source="/Fouad;component/Themes/Brushes.xaml"/>
        <ResourceDictionary Source="/Fouad;component/Themes/Fonts.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- History Item Template -->
    <DataTemplate x:Key="HistoryItemTemplate" DataType="{x:Type models:HistoryItem}">
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="{Binding SearchTerm}" FontWeight="Bold" Margin="0,0,10,0"/>
            <TextBlock Text="{Binding SearchDate, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Foreground="Gray"/>
            <TextBlock Text="{Binding MatchCount, StringFormat='({0} matches)'}" Margin="10,0,0,0"/>
        </StackPanel>
    </DataTemplate>
    
    <!-- Result Item Template -->
    <DataTemplate x:Key="ResultItemTemplate" DataType="{x:Type models:Result}">
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="{Binding Value}" Margin="0,0,10,0"/>
            <TextBlock Text="{Binding RowNumber, StringFormat='[Row: {0}]'}" Foreground="Gray"/>
        </StackPanel>
    </DataTemplate>
    
</ResourceDictionary>