<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Import necessary resources -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Fouad;component/Themes/Colors.xaml"/>
        <ResourceDictionary Source="/Fouad;component/Themes/Brushes.xaml"/>
        <ResourceDictionary Source="/Fouad;component/Themes/Fonts.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Custom ToggleButton Template for Dark Mode -->
    <ControlTemplate x:Key="DarkModeToggleTemplate" TargetType="ToggleButton">
        <Border x:Name="border" 
                Background="{TemplateBinding Background}" 
                BorderBrush="{TemplateBinding BorderBrush}" 
                BorderThickness="{TemplateBinding BorderThickness}" 
                CornerRadius="15" 
                Width="60" 
                Height="30">
            <Grid>
                <Ellipse x:Name="ellipse" 
                         Fill="White" 
                         Width="24" 
                         Height="24" 
                         HorizontalAlignment="Left" 
                         Margin="3,0,0,0"/>
                <TextBlock x:Name="text" 
                           Text="🌙" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0" 
                           Foreground="White"/>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter TargetName="ellipse" Property="HorizontalAlignment" Value="Right"/>
                <Setter TargetName="ellipse" Property="Margin" Value="0,0,3,0"/>
                <Setter TargetName="text" Property="Text" Value="☀️"/>
                <Setter TargetName="text" Property="HorizontalAlignment" Value="Left"/>
                <Setter TargetName="text" Property="Margin" Value="10,0,0,0"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    
</ResourceDictionary>