<Application x:Class="Fouad.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Fouad"
             xmlns:converters="clr-namespace:Fouad.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Default theme -->
                <ResourceDictionary Source="/Fouad;component/Themes/LightTheme.xaml"/>
                
                <!-- Core application styles -->
                <ResourceDictionary Source="/Fouad;component/Themes/AppStyles.xaml"/>
                
                <!-- Language resources -->
                <ResourceDictionary Source="/Fouad;component/Resources/EnglishStrings.xaml"/>
                
                <!-- Custom delete effects -->
                <ResourceDictionary Source="/Fouad;component/Controls/DeleteEffects.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:BooleanToFlowDirectionConverter x:Key="BooleanToFlowDirectionConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:SearchHighlightConverter x:Key="SearchHighlightConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>