<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Base Colors - These will be overridden by theme-specific values -->
    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#2196F3</Color>
    <Color x:Key="PrimaryLightColor">#64B5F6</Color>
    <Color x:Key="PrimaryDarkColor">#1976D2</Color>
    <Color x:Key="PrimaryTextColor">#000000</Color>
    
    <!-- Secondary Colors -->
    <Color x:Key="SecondaryColor">#03DAC6</Color>
    <Color x:Key="SecondaryLightColor">#66E6D6</Color>
    <Color x:Key="SecondaryDarkColor">#018786</Color>
    <Color x:Key="SecondaryTextColor">#000000</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="AccentColor">#FF4081</Color>
    <Color x:Key="AccentLightColor">#FF79B0</Color>
    <Color x:Key="AccentDarkColor">#F50057</Color>
    
    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="WarningColor">#FFC107</Color>
    <Color x:Key="DangerColor">#F44336</Color>
    <Color x:Key="InfoColor">#2196F3</Color>
    
    <!-- Neutral Colors -->
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="SurfaceColor">#F5F5F5</Color>
    <Color x:Key="SurfaceLightColor">#FAFAFA</Color>
    <Color x:Key="SurfaceDarkColor">#EEEEEE</Color>
    <Color x:Key="ForegroundColor">#000000</Color>
    <Color x:Key="ForegroundSecondaryColor">#757575</Color>
    <Color x:Key="BorderColor">#E0E0E0</Color>
    <Color x:Key="DisabledColor">#9E9E9E</Color>
    <Color x:Key="HoverColor">#F5F5F5</Color>
    <Color x:Key="PressedColor">#E0E0E0</Color>
    <Color x:Key="FocusColor">#2196F3</Color>
    
    <!-- Theme-specific Colors -->
    <Color x:Key="SidebarBackgroundColor">#F5F5F5</Color>
    <Color x:Key="ResultsHeaderColor">#E3F2FD</Color>
    <Color x:Key="HistoryHeaderColor">#FFF3E0</Color>
    <Color x:Key="DataGridRowColor">#FFFFFF</Color>
    <Color x:Key="DataGridRowAltColor">#FAFAFA</Color>
    <Color x:Key="DataGridHeaderColor">#EEEEEE</Color>
    
</ResourceDictionary>