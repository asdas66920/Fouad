<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- This file gathers all the overall styles for the application -->
    <!-- It serves as the main entry point for application-wide styles -->
    
    <ResourceDictionary.MergedDictionaries>
        <!-- Core styling resources -->
        <ResourceDictionary Source="/Fouad;component/Themes/Colors.xaml"/>
        <ResourceDictionary Source="/Fouad;component/Themes/Brushes.xaml"/>
        <ResourceDictionary Source="/Fouad;component/Themes/Fonts.xaml"/>
        <ResourceDictionary Source="/Fouad;component/Themes/Iconography.xaml"/>
        
        <!-- Control styles -->
        <ResourceDictionary Source="/Fouad;component/Controls/ButtonStyles.xaml"/>
        <ResourceDictionary Source="/Fouad;component/Controls/TextBoxStyles.xaml"/>
        <ResourceDictionary Source="/Fouad;component/Controls/DataGridStyles.xaml"/>
        
        <!-- Behaviors -->
        <ResourceDictionary Source="/Fouad;component/Behaviors/Animations.xaml"/>
        <ResourceDictionary Source="/Fouad;component/Behaviors/Triggers.xaml"/>
        
        <!-- Generic styles that depend on control styles -->
        <ResourceDictionary Source="/Fouad;component/Controls/Generic.xaml"/>
        
        <!-- Templates -->
        <ResourceDictionary Source="/Fouad;component/Templates/DataTemplates.xaml"/>
        <ResourceDictionary Source="/Fouad;component/Templates/ControlTemplates.xaml"/>
        
        <!-- Logic & Commands -->
        <ResourceDictionary Source="/Fouad;component/Logic/Converters.xaml"/>
        <ResourceDictionary Source="/Fouad;component/Logic/Commands.xaml"/>
        <ResourceDictionary Source="/Fouad;component/Logic/ValidationTemplates.xaml"/>
        
        <!-- Custom Components -->
        <ResourceDictionary Source="/Fouad;component/Components/CustomControls.xaml"/>
        
        <!-- Enhanced Styles -->
        <ResourceDictionary Source="/Fouad;component/Themes/EnhancedStyles.xaml"/>
        
        <!-- Themes -->
        <!-- LightTheme.xaml is already loaded in App.xaml, so we don't need to load it here -->
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Highlight Text Styles -->
    <Style x:Key="BoldGreenText" TargetType="Run">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="Green"/>
    </Style>
    
    <Style x:Key="BoldBlueText" TargetType="Run">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="Blue"/>
    </Style>
    
    <Style x:Key="BoldRedText" TargetType="Run">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="Red"/>
    </Style>
    
</ResourceDictionary>