    <!-- Icon Styles -->
    <Style x:Key="IconStyleBase" TargetType="Path">
        <Setter Property="Fill" Value="{StaticResource ForegroundBrush}"/>
        <Setter Property="Stretch" Value="Uniform"/>
    </Style>
    
    <Style x:Key="IconStyleSmall" TargetType="Path" BasedOn="{StaticResource IconStyleBase}">
        <Setter Property="Width" Value="{StaticResource IconSizeSmall}"/>
        <Setter Property="Height" Value="{StaticResource IconSizeSmall}"/>
    </Style>
    
    <Style x:Key="IconStyleMedium" TargetType="Path" BasedOn="{StaticResource IconStyleBase}">
        <Setter Property="Width" Value="{StaticResource IconSizeMedium}"/>
        <Setter Property="Height" Value="{StaticResource IconSizeMedium}"/>
    </Style>
    
    <Style x:Key="IconStyleLarge" TargetType="Path" BasedOn="{StaticResource IconStyleBase}">
