<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Import Colors -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Fouad;component/Themes/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Solid Brushes -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryColorBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightColorBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkColorBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    
    <SolidColorBrush x:Key="SecondaryColorBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryLightColorBrush" Color="{StaticResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="SecondaryDarkColorBrush" Color="{StaticResource SecondaryDarkColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    
    <SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentLightColorBrush" Color="{StaticResource AccentLightColor}"/>
    <SolidColorBrush x:Key="AccentDarkColorBrush" Color="{StaticResource AccentDarkColor}"/>
    
    <SolidColorBrush x:Key="SuccessColorBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningColorBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="DangerColorBrush" Color="{StaticResource DangerColor}"/>
    <SolidColorBrush x:Key="InfoColorBrush" Color="{StaticResource InfoColor}"/>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SurfaceLightBrush" Color="{StaticResource SurfaceLightColor}"/>
    <SolidColorBrush x:Key="SurfaceDarkBrush" Color="{StaticResource SurfaceDarkColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="{StaticResource ForegroundSecondaryColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="{StaticResource DisabledColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="PressedBrush" Color="{StaticResource PressedColor}"/>
    <SolidColorBrush x:Key="FocusBrush" Color="{StaticResource FocusColor}"/>
    
    <!-- Theme-specific Brushes -->
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="ResultsHeaderBackground" Color="{StaticResource ResultsHeaderColor}"/>
    <SolidColorBrush x:Key="HistoryHeaderBackground" Color="{StaticResource HistoryHeaderColor}"/>
    <SolidColorBrush x:Key="DataGridRowBrush" Color="{StaticResource DataGridRowColor}"/>
    <SolidColorBrush x:Key="DataGridRowAltBrush" Color="{StaticResource DataGridRowAltColor}"/>
    <SolidColorBrush x:Key="DataGridHeaderBrush" Color="{StaticResource DataGridHeaderColor}"/>
    
    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryLightColor}" Offset="0.0"/>
        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0.5"/>
        <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1.0"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SecondaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource SecondaryLightColor}" Offset="0.0"/>
        <GradientStop Color="{StaticResource SecondaryColor}" Offset="0.5"/>
        <GradientStop Color="{StaticResource SecondaryDarkColor}" Offset="1.0"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource AccentLightColor}" Offset="0.0"/>
        <GradientStop Color="{StaticResource AccentColor}" Offset="0.5"/>
        <GradientStop Color="{StaticResource AccentDarkColor}" Offset="1.0"/>
    </LinearGradientBrush>
    
</ResourceDictionary>